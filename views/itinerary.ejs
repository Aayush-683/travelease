<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Generated Itinerary Page</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            flex-direction: column;
        }
        form {
            border: 1px solid #ccc;
            padding: 20px;
            border-radius: 5px;
        }
        input[type="number"],
        input[type="text"],
        button {
            display: block;
            margin-bottom: 10px;
            width: 100%;
            padding: 10px;
            box-sizing: border-box;
        }
        button {
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        button:hover {
            background-color: #0056b3;
        }
        h1 {
            text-align: center;
        }
        ul {
            padding: 0;
        }
        li {
            margin-bottom: 10px;
        }
        #loading-message {
            display: none;
            text-align: center;
            margin-top: 20px;
        }
    </style>
  </head>
  <body>
      <% if (!itinerary) { %>
        <form action="/gen/itinerary" method="post" onsubmit="return showLoading()" id="itinerary-form">
            <% if (error) { %>
                <p><%= error %></p>
            <% } %>
            <input type="number" name="days" placeholder="Enter number of days" max="7" required/>
            <input type="number" name="budget" placeholder="Enter budget" max="9999999" required/>
            <input type="text" name="currency" placeholder="Enter currency" maxlength="3" required/>
            <input type="number" name="members" placeholder="Enter number of members" max="20" required/>
            <input type="text" name="city" placeholder="Enter city" maxlength="20" required/>
            <input type="text" name="country" placeholder="Enter country" maxlength="10" required/>
            <button type="submit">Generate Itinerary</button>
        </form>
        <div id="loading-message">Loading the itinerary...</div>
        <% } else { %>
        <h2>Here is your itinerary:</h1>
        <% for (let i = 0; i < itinerary.length; i++) { %>
            <h3>Day: <%= itinerary[i].day %></h3>
            <ul>
                <li>Location: <%= itinerary[i].location %></li>
                <li>Activities: <%= itinerary[i].activities.join(", ") %></li>
            </ul>
            <p>Restaurants:</p>
            <% for (let j = 0; j < itinerary[i].restaurants.length; j++) { %>
                <ul>
                    <li>ID: <%= j+1 %></li>
                    <li>Name: <%= itinerary[i].restaurants[j].name %></li>
                    <li>Location: <%= itinerary[i].restaurants[j].location %></li>
                    <li>Cuisine: <%= itinerary[i].restaurants[j].cuisine %></li>
                    <li>Price Range: <%= itinerary[i].restaurants[j].price_range %></li>
                    <li>Speciality: <%= itinerary[i].restaurants[j].speciality %></li>
                    <li>
                        <img src="<%= itinerary[i].restaurants[j].image %>" alt="<%= itinerary[i].restaurants[j].name %>" width="200" />
                    </li>
                </ul>
            <% } %>
            <p>Accommodations:</p>
            <% for (let k = 0; k < itinerary[i].accommodations.length; k++) { %>
                <ul>
                    <li>ID: <%= k+1 %></li>
                    <li>Name: <%= itinerary[i].accommodations[k].name %></li>
                    <li>Location: <%= itinerary[i].accommodations[k].location %></li>
                    <li>Price Range: <%= itinerary[i].accommodations[k].price_range %></li>
                    <li>Description: <%= itinerary[i].accommodations[k].description %></li>
                    <li>
                        <img src="<%= itinerary[i].accommodations[k].image %>" alt="<%= itinerary[i].accommodations[k].name %>" width="200" />
                    </li>
                </ul>
            <% } %>
            <hr>
        <% } %>
    <% } %>
    <script>
        function showLoading() {
        document.getElementById("itinerary-form").style.display = "none"; // Hide the form
        document.getElementById("loading-message").style.display = "block"; // Show the loading message
        return true; // Continue with the form submission (return false to cancel the submission)
    }
    </script>
  </body>
</html>
